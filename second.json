{ 
 "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 200,
  "height": 200,
  "padding": 5,

 "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/paristhecity/understanding/master/data/drugs.csv",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['18-25'] != null && datum['RatesAlcoholAbusePastYear1825'] != null && datum['Year'] == '2014' && datum['State'] == 'Alabama' "
        }
      ]
    }
  ],

  "scales": [
  {
    "name": "x",
    "type": "linear",
    "round": false,
    "nice": true,
    "zero": true,
    "domain": {"data": "source", "field": "18-25"},
    "range": "width"
  },
  {
    "name": "y",
    "type": "linear",
    "round": true,
    "nice": true,
    "zero": true,
    "domain": {"data": "source", "field": "RatesAlcoholAbusePastYear1825"},
    "range": "height"
  }
],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 1,
      "title": "Population of Ages 18-25"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Rates of Alcohol Abuse"
    }
  ],

  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "Horsepower"},
          "y": {"scale": "y", "field": "Miles_per_Gallon"},
          "size": {"value": 900},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 2},
          "opacity": {"value": 0.5},
          "stroke": {"value": "#4682b4"},
          "fill": {"value": "transparent"}
        }
      }
    }
  ]
  
}