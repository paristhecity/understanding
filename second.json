{ 
 "$schema": "https://vega.github.io/schema/vega/v3.json",
  "width": 200,
  "height": 200,
  "padding": 5,

 "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/paristhecity/understanding/master/data/drugs.csv",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['18-25'] != null && datum['Rates.Alcohol.Abuse Past Year.18-25'] != null && datum['Year'] == '2014' && datum['State'] == 'Alabama' "
        }
      ]
    }
  ],

  "scales": [
  {
    "name": "x",
    "type": "linear",
    "round": false,
    "nice": true,
    "zero": true,
    "domain": {"data": "source", "field": "18-25"},
    "range": "width"
  },
  {
    "name": "y",
    "type": "linear",
    "round": true,
    "nice": true,
    "zero": true,
    "domain": {"data": "source", "field": "Rates.Alcohol.Abuse Past Year.18-25"},
    "range": "height"
  }
],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 1,
      "title": "Population of Ages 18-25"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Rates of Alcohol Abuse"
    }
  ],

  "marks": [
  {
    "name": "marks",
    "type": "symbol",
    "from": {"data": "source"},
    "encode": {
      "update": {
        "x": {"scale": "x", "field": "18-25"},
        "y": {"scale": "y", "field": "Rates.Alcohol.Abuse Past Year.18-25"},
        "size" : {"value": 900},
        "shape": {"value": "circle"},
        "strokeWidth": {"value": 0},
        "opacity": {"value": 1},
        "color": {"value": "#000000"},
        "fill": {"value": "opaque"},
        "fillOpacity": {"value": 1}
      }
    }
  }
]
  
}